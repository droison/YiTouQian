<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page_bg"
    android:orientation="vertical" >

    <include layout="@layout/layout_comm_title_two_button" />

    <include layout="@layout/card_info_only" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/app_grey3" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/card_info_tab_bg"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/card_info_choose_history"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/card_info_text1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="历史趋势"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/card_info_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_blue" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#dddddd" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_info_curr"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/card_info_text2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:lines="1"
                android:text="账单详情"
                android:textColor="@color/app_grey2"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/card_info_curr_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_blue"
                android:visibility="gone" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#dddddd" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_info_phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/card_info_text3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="银行电话"
                android:textColor="@color/app_grey2"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/card_info_phone_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_blue"
                android:visibility="gone" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#dddddd" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_info_map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/card_info_text4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="银行网点"
                android:textColor="@color/app_grey2"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/card_info_map_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_blue"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/app_blue" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ScrollView
            android:id="@+id/card_info_his_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:id="@+id/linearLayout_history"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/linearlayout_history"
                android:orientation="vertical"
                android:padding="15dp" 
                android:gravity="top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="历史账单趋势图"
                    android:textColor="@color/cart_blue"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/cart_blue" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/card_info_his_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="历史账单第5期"
                        android:textColor="@color/cart_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/card_info_his_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="历史账单第5期"
                        android:textColor="@color/cart_gray"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="130dp"
                        android:background="@drawable/circle_list_divider" />

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:scrollbarAlwaysDrawHorizontalTrack="false"
                        android:scrollbars="none" >

                        <com.yeetou.xinyongkaguanjia.component.MyLinearLayoutForListAdapter
                            android:id="@+id/card_info_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>

                    <com.yeetou.xinyongkaguanjia.component.HorizontalListView
                        android:id="@+id/card_info_cart_horizon"
                        android:layout_width="fill_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="bottom"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:visibility="gone" />
                </RelativeLayout>

                <ViewStub
                    android:id="@+id/card_info_pie_viewstub"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:inflatedId="@+id/layout_card_info_pie"
                    android:layout="@layout/card_info_pie_item" />
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/relativeLayout_curr"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" >

            <ExpandableListView
                android:id="@+id/card_info_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/app_bg_grey2"
                android:cacheColorHint="#00000000"
                android:listSelector="#00000000" >
            </ExpandableListView>

            <LinearLayout
                android:id="@+id/layout_curr_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/card_info_curr_demo" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="马上导入信用卡邮件账单，分析我的支出"
                    android:textColor="@color/cart_gray"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/card_info_input_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/card_info_input_email" />
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/card_info_bankphone_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg_grey2"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/linearLayout_bank_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout_bank_map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="gone" >

            <com.baidu.mapapi.MapView
                android:id="@+id/map_View"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>