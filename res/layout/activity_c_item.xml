<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".CActivity" >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:background="@color/app_bg_grey1" >
    <LinearLayout
        android:id="@+id/c_item_layout1"
        android:layout_width="100dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/c_item_month"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="十月"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/c_cun"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="存：￥11000"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/c_item_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/c_item_layout2"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/c_item_layout1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/c_item_red"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:src="@color/app_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/c_item_green"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:src="@color/app_green" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/c_item_layout2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/c_shou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="收：￥100000"
            android:textColor="@color/cart_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/c_zhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="收：￥100000"
            android:textColor="@color/cart_gray"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>