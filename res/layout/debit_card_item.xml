<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/bank_card_width"
    android:layout_height="@dimen/bank_card_high"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/bank_card_width_in"
        android:layout_height="@dimen/bank_card_high_in"
        android:layout_marginLeft="10dp"
        android:background="@drawable/card_grey_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/bank_card_rela1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/credit_card_item_margin_bottom"
            android:paddingLeft="@dimen/credit_card_item_margin_top"
            android:paddingRight="@dimen/credit_card_item_margin_top"
            android:paddingTop="@dimen/credit_card_item_margin_top" >

            <ImageView
                android:id="@+id/bank_card_logo"
                android:layout_width="@dimen/bank_logo_width"
                android:layout_height="@dimen/bank_logo_width"
                android:background="@drawable/boc" />
"

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/bank_rela_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/bank_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="中国银行"
                        android:textColor="#222222"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/bank_card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="(3825)"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/circle_list_divider" />

        <RelativeLayout
            android:id="@+id/bank_card_rela2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp" 
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bank_card_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:layout_marginLeft="8dp"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/bank_card_text3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bank_card_btn"
                android:layout_marginRight="14dp"
                android:gravity="right"
                android:maxEms="4"
                android:text="李磊"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>