<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".CActivity" >

    <ImageView
        android:id="@+id/b_item_left"
        android:layout_width="73.68dp"
        android:layout_height="match_parent"
        android:background="@drawable/b_item_left" />

    <LinearLayout
        android:layout_width="73.68dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/b_item_day_layout"
        android:orientation="vertical"
        android:background="@color/app_blue" >

        <TextView
            android:id="@+id/b_item_day"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="6日"
            android:textColor="@color/white"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/b_item_weekday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="星期日"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b_item_day_layout"
        android:background="@color/app_bg_grey1"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>